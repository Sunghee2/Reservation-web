extends ./layout

block content
  .container
    h3 예약 내역
    br
     
    if myr 
        table.table.table-hover
            thead
                th 예약 번호
                th 강의실 번호
                th 예약 일시
            tbody
                each reservation in reservations
                    tr
                        td
                            a(href=`reservationlist/${reservation._id}/detail`)= reservation.id
                        td= reservation.room
                        td= reservation.date
    else
      .alert.alert-info 이 예약 번호의 예약이 존재하지 않습니다.